# Functions
fcd() { 
    z "$( fd -t d . $1 | fzf )"
}

fopen(){
    if [[ -z $1 ]]; then
        fd -L  --print0 | fzf --read0 | xargs -0 xdg-open
    else
        fd -L -e "$1" --print0 | fzf --read0 | xargs -0 xdg-open 
    fi
}

lfcd () {
    # `command` is needed in case `lfcd` is aliased to `lf`
    cd "$(command lf -print-last-dir "$@")"
}
